<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.byagowi.persiancalendar"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/new_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.Activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
            android:name="com.byagowi.persiancalendar.SystemStartup"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".AlarmReceiver"
            android:exported="false" />
        <receiver
            android:name=".AthanResetReceiver"
            android:exported="false" />
        <receiver
            android:name=".AlarmReceiver$StopAthanPlaybackReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.byagowi.persiancalendar.stop_athan" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ApplicationService"
            android:label="Calendar Service"/>

        <receiver
            android:name=".Widget1x1"
            android:exported="false"
            android:icon="@drawable/launcher_icon"
            android:label="@string/widget_mini_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/persiancalendar_provider1x1"/>
        </receiver>
        <receiver
            android:name=".Widget4x1"
            android:exported="false"
            android:icon="@drawable/launcher_icon"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/persiancalendar_provider4x1"/>
        </receiver>

        <service
            android:name=".DashClockUpdate"
            android:icon="@drawable/day31"
            android:label="@string/app_name"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA">
            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension"/>
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="1"/>

            <meta-data
                android:name="description"
                android:value="Persian Calendar"/>
        </service>

        <activity
            android:name=".view.AthanView"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>
