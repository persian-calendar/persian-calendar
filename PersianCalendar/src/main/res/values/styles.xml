    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/dark_primary_dark
        </item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorCard">@color/dark_card_background</item>
        <item name="colorBackground">@color/dark_background</item>
        <item name="colorTextPrimary">@color/dark_text_primary</item>
        <item name="colorIcon">@color/dark_icon</item>
        <item name="colorTextNormal">@color/dark_text_normal</item>
        <item name="colorTextSecond">@color/dark_text_second</item>
        <item name="colorTextHoliday">@color/dark_text_holiday</item>
        <item name="colorHoliday">@color/dark_holiday</item>
        <item name="colorTextDrawer">@color/dark_text_drawer</item>
        <item name="colorTextDay">@color/dark_text_day</item>
        <item name="colorTextDayName">@color/dark_text_day_name</item>
        <item name="colorTextAthan">@color/dark_text_athan</item>
        <item name="colorDivider">@color/dark_divider</item>
        <item name="colorCurrentDay">@color/dark_current_day</item>
        <item name="colorSelectDay">@color/dark_select_day</item>
        <item name="colorDrawerBackground">@color/dark_drawer_background</item>
        <item name="colorDrawerSelect">@color/dark_drawer_select</item>
        <item name="colorDrawerIcon">@color/dark_icon_drawer</item>
        <item name="colorMonthSwitch">@color/dark_month_switch</item>

        <item name="circleCurrentDay">@drawable/circle_current_day_dark</item>
        <item name="circleSelect">@drawable/circle_select_dark</item>
        <item name="appDivider">@drawable/app_divider_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/light_primary_dark
        </item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorCard">@color/light_card_background</item>
        <item name="colorBackground">@color/light_background</item>
        <item name="colorTextPrimary">@color/light_text_primary</item>
        <item name="colorIcon">@color/light_icon</item>
        <item name="colorTextNormal">@color/light_text_normal</item>
        <item name="colorTextSecond">@color/light_text_second</item>
        <item name="colorTextHoliday">@color/light_text_holiday</item>
        <item name="colorHoliday">@color/light_holiday</item>
        <item name="colorTextDrawer">@color/light_text_drawer</item>
        <item name="colorTextDay">@color/light_text_day</item>
        <item name="colorTextDayName">@color/light_text_day_name</item>
        <item name="colorTextAthan">@color/light_text_athan</item>
        <item name="colorDivider">@color/light_divider</item>
        <item name="colorCurrentDay">@color/light_current_day</item>
        <item name="colorSelectDay">@color/light_select_day</item>
        <item name="colorDrawerBackground">@color/light_drawer_background</item>
        <item name="colorDrawerSelect">@color/light_drawer_select</item>
        <item name="colorDrawerIcon">@color/light_icon_drawer</item>
        <item name="colorMonthSwitch">@color/light_month_switch</item>

        <item name="circleCurrentDay">@drawable/circle_current_day_light</item>
        <item name="circleSelect">@drawable/circle_select_light</item>
        <item name="appDivider">@drawable/app_divider_light</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- The revived old application theme. -->
    <style name="ClassicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--item name="colorPrimary">@color/classic_primary</item-->>
        <item name="colorPrimaryDark">@color/classic_primary_dark</item>
        <item name="colorAccent">@color/classic_accent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/classic_primary_dark
        </item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="colorCard">@color/classic_card_background</item>
        <item name="colorBackground">@color/classic_background</item>
        <item name="colorTextPrimary">@color/classic_text_primary</item>
        <item name="colorIcon">@color/classic_icon</item>
        <item name="colorTextNormal">@color/classic_text_normal</item>
        <item name="colorTextSecond">@color/classic_text_second</item>
        <item name="colorTextHoliday">@color/classic_text_holiday</item>
        <item name="colorHoliday">@color/classic_holiday</item>
        <item name="colorTextDrawer">@color/classic_text_drawer</item>
        <item name="colorTextDay">@color/classic_text_day</item>
        <item name="colorTextDayName">@color/classic_text_day_name</item>
        <item name="colorTextAthan">@color/classic_text_athan</item>
        <item name="colorDivider">@color/classic_divider</item>
        <item name="colorCurrentDay">@color/classic_current_day</item>
        <item name="colorSelectDay">@color/classic_select_day</item>
        <item name="colorDrawerBackground">@color/classic_drawer_background</item>
        <item name="colorDrawerSelect">@color/classic_drawer_select</item>
        <item name="colorDrawerIcon">@color/classic_icon_drawer</item>
        <item name="colorMonthSwitch">@color/classic_month_switch</item>

        <item name="circleCurrentDay">@drawable/circle_current_day_light</item>
        <item name="circleSelect">@drawable/circle_select_light</item>
        <item name="appDivider">@drawable/app_divider_light</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="FullscreenTheme" parent="LightTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ShadowTextStyle">
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AboutCard">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/colorCard</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="tabTextColor">?attr/colorTextSecond</item>
        <item name="tabSelectedTextColor">?attr/colorTextPrimary</item>
    </style>

</resources>
