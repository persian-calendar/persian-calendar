<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_notification_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@android:style/TextAppearance.Material.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        tools:text="Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/body"
            style="@android:style/TextAppearance.Material.Notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            tools:text="Body" />

        <TextView
            android:id="@+id/city"
            style="@android:style/TextAppearance.Material.Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".75"
            tools:text="City" />

    </LinearLayout>

    <TextView
        android:id="@+id/holidays"
        style="@android:style/TextAppearance.Material.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textColor="@color/remote_view_holiday_color"
        tools:text="Holidays" />

    <TextView
        android:id="@+id/nonholidays"
        style="@android:style/TextAppearance.Material.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        tools:text="Events" />

    <LinearLayout
        android:id="@+id/times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head1"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="head1" />

            <TextView
                android:id="@+id/time1"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="time1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head2"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="head2" />

            <TextView
                android:id="@+id/time2"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="time2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head3"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="head3" />

            <TextView
                android:id="@+id/time3"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="time3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/column4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head4"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="head4" />

            <TextView
                android:id="@+id/time4"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="time4" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/column5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head5"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="head5" />

            <TextView
                android:id="@+id/time5"
                style="@android:style/TextAppearance.Material.Notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="time5" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
