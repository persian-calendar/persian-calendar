<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/day_item_size"
    android:layout_height="@dimen/day_item_size"
    android:layout_gravity="center"
    android:gravity="center">

    <View
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/circle_select"
        android:id="@+id/select_day"/>

    <View
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/circle_current_day"
        android:id="@+id/today"/>

    <TextView
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/num"/>

    <View
        android:layout_width="8dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_select"
        android:id="@+id/event"/>

</RelativeLayout>