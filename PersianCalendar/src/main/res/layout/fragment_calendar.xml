<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/calendar_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_calendar_height" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                app:cardBackgroundColor="?attr/colorCard">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/week_day_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="?attr/colorTextPrimary"
                            android:textSize="@dimen/text_size_title"
                            tools:text="Calendar" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right|end"
                            android:layout_marginEnd="@dimen/icon_margin"
                            android:layout_marginRight="@dimen/icon_margin"
                            android:gravity="end|right|center_vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/today_icon"
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:tint="?attr/colorTextPrimary"
                                app:srcCompat="@drawable/ic_restore_modified" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/today"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/today"
                                android:textColor="?attr/colorTextPrimary"
                                android:textSize="@dimen/text_size_title" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.byagowi.persiancalendar.adapter.CardsViewPager
                        android:id="@+id/tab_content"
                        android:layout_width="match_parent"
                        android:layout_height="120sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</layout>
